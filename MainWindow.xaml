        <Menu x:Name="MainMenu"  Height="26" Margin="0,0,-0.4,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_Close" IsCheckable="true" />


            </MenuItem>
            <MenuItem Header="_Report">
                <MenuItem Header="_Generate Report" IsCheckable="true" />


            </MenuItem>
        </Menu>
        <DataGrid x:Name="ListOfPublications"  AutoGenerateColumns="False" IsReadOnly="True" Margin="0,40,0,21" HorizontalAlignment="Stretch" HeadersVisibility="Column" Grid.Row="1" Grid.Column="1" SelectionChanged="ListOfPublications_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Year" Binding="{Binding Path=Year}" />
