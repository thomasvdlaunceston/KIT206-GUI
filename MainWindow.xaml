<Window x:Class="KIT206_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIT206_GUI"
        mc:Ignorable="d"
        Title="RAP" Height="800" Width="800" Icon="Group-icon.png" ResizeMode="NoResize">
	<Grid Margin="0,0,0,-12.5">
		<Grid.RowDefinitions>
			<RowDefinition Height="436*"/>
			<RowDefinition Height="349*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="7*"/>
			<ColumnDefinition Width="171*"/>
			<ColumnDefinition Width="421*"/>
			<ColumnDefinition Width="157*"/>
			<ColumnDefinition Width="40*"/>
		</Grid.ColumnDefinitions>
		<DataGrid Name="ResearcherList" IsReadOnly="True" HorizontalAlignment="Left" Height="248" Margin="13,112,0,0" VerticalAlignment="Top" Width="760" Grid.ColumnSpan="4" Grid.Column="1" HeadersVisibility="Column" SelectionChanged="DataGrid_SelectionChanged" Background="{x:Null}">
			<DataGrid.Columns >
				<DataGridTextColumn Header="Researchers" Width="100" ></DataGridTextColumn>


