			<TextBox HorizontalAlignment="Left" Height="23" Margin="88,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" AutomationProperties.HelpText="Enter a name to filter the list"/>
			<Label Content="Show:" HorizontalAlignment="Left" Margin="296,31,0,0" VerticalAlignment="Top"/>
			<ComboBox HorizontalAlignment="Left" Margin="346,35,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" SelectionChanged="ComboBox_SelectionChanged"/>
			<TextBlock HorizontalAlignment="Left" Margin="0,71,0,0" TextWrapping="Wrap" Text="LIST OF RESEARCHERS" VerticalAlignment="Top" Width="156" Foreground="DarkBlue"/>
			<TextBlock HorizontalAlignment="Left" Margin="0,341,0,0" TextWrapping="Wrap" Text="RESEARCHERS' DETAILS" VerticalAlignment="Top" Width="156" Foreground="DarkBlue"/>
			<TextBlock HorizontalAlignment="Left" Margin="375,341,0,0" TextWrapping="Wrap" Text="LIST OF PUBLICATIONS" VerticalAlignment="Top" Width="156" Foreground="DarkBlue"/>
			<Label Content="Name:" HorizontalAlignment="Left" Margin="2,374,0,0" VerticalAlignment="Top"/>
			<Label Content="Title" HorizontalAlignment="Left" Margin="1,397,0,0" VerticalAlignment="Top"/>
			<Label Content="Email:" HorizontalAlignment="Left" Margin="1,458,0,0" VerticalAlignment="Top"/>
			<Label Content="Unit:" HorizontalAlignment="Left" Margin="1,418,0,0" VerticalAlignment="Top"/>
			<Label Content="Campus:" HorizontalAlignment="Left" Margin="1,438,0,0" VerticalAlignment="Top"/>
			<Label Content="Current Job:" HorizontalAlignment="Left" Margin="0,478,0,0" VerticalAlignment="Top"/>
			<Label Content="Commenced with institution:" HorizontalAlignment="Left" Margin="0,498,0,0" VerticalAlignment="Top"/>
			<Label Content="Commenced current position:" HorizontalAlignment="Left" Margin="0,518,0,0" VerticalAlignment="Top"/>
			<Label Content="Previous positions:" HorizontalAlignment="Left" Margin="0,538,0,0" VerticalAlignment="Top"/>
			<Image HorizontalAlignment="Left" Height="100" Margin="200,376,0,0" VerticalAlignment="Top" Width="100"/>
			<Label Content="Tenure:" HorizontalAlignment="Left" Margin="0,558,0,0" VerticalAlignment="Top"/>
			<Label Content="Publications:" HorizontalAlignment="Left" Margin="0,578,0,0" VerticalAlignment="Top"/>
			<Label Content="3Y average:" HorizontalAlignment="Left" Margin="0,598,0,0" VerticalAlignment="Top"/>
			<Label Content="Supervisions:" HorizontalAlignment="Left" Margin="0,618,0,0" VerticalAlignment="Top"/>
			<Label Content="Degree:" HorizontalAlignment="Left" Margin="0,638,0,0" VerticalAlignment="Top"/>
			<Label Content="Supervisor:" HorizontalAlignment="Left" Margin="0,658,0,0" VerticalAlignment="Top"/>

		</Grid>
		<Menu x:Name="MainMenu" HorizontalAlignment="Left" Height="26" Margin="14,6,0,0" VerticalAlignment="Top" Width="759" Grid.ColumnSpan="4" Grid.Column="1">
			<MenuItem Header="_File">
				<MenuItem Header="_Close" IsCheckable="true" />


			</MenuItem>
			<MenuItem Header="_Report">
				<MenuItem Header="_Generate Report" IsCheckable="true" />


			</MenuItem>
		</Menu>
	</Grid>
</Window>
