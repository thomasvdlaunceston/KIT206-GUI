		</DataGrid>
		<DataGrid HorizontalAlignment="Left" Height="364" Margin="218.5,390,0,0" VerticalAlignment="Top" Width="384" RenderTransformOrigin="-0.215,-0.29" Grid.RowSpan="2" Grid.ColumnSpan="3" Grid.Column="2"/>
		<Grid HorizontalAlignment="Left" Height="733" Margin="13,24,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="754" Grid.ColumnSpan="4" Grid.Column="1">
			<Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="363" Margin="0,366,0,0" VerticalAlignment="Top" Width="373"/>
